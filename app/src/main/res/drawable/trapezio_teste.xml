<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="top|center" android:width="70dp" android:height="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#e6e7e8" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="80dp" android:height="30dp"/>
            <solid android:color="#e6e7e8" />
        </shape>
    </item>

    <item android:gravity="bottom|center" android:width="70dp" android:height="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#e6e7e8" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>